{{#unless _isHidden}}
<button 
    data-type="{{type}}" 
    data-id="{{_id}}" 
    class="{{#if _icon}}icon {{_icon}}{{/if}}{{#if _isUndefined}}undefined disabled {{/if}}{{#if _isLocked}}locked disabled{{/if}}" 
    aria-label="{{{compile ariaLabel this}}}" 
    tooltip="{{#if _showToolTip}}{{{compile toolTip this}}}{{/if}}">
	<span class="text">
	{{{compile text this}}}
	</span>
</button>
{{/unless}}